<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Megustaelsol.com!{% endblock %}</title>
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
        <!-- Site Icons -->
        {% block icons %}
            <link rel="shortcut icon" href="{{asset('images/favicon.ico')}}" type="image/x-icon" />
            <link rel="apple-touch-icon" href="{{ asset('images/apple-touch-icon.png') }}">
        {% endblock %}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block fonts %}
            <link href="https://fonts.googleapis.com/css?family=Rubik:300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">
        {% endblock %}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
            <!-- Site CSS -->
            <link rel="stylesheet" type="text/css" href="{{ asset('css/site.css') }}">
            <!-- ALL VERSION CSS -->
            <link rel="stylesheet" type="text/css" href="{{ asset('css/versions.css') }}">
            <!-- Responsive CSS -->
            <link rel="stylesheet" type="text/css" href="{{ asset('css/responsive.css') }}">
            <!-- Custom CSS -->
            <link rel="stylesheet" type="text/css" href="{{ asset('css/custom.css') }}">
        {% endblock %}
        {% block js %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script type="text/javascript" src="{{ asset('js/modernizer.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <!--  Login and Registration Modal -->
                {% include 'partials/modal-auth.html.twig' %}
            <!--  End Login and Registration Modal -->
            <!-- LOADER -->
                {% include 'partials/preloader.html.twig' %}
            <!-- END LOADER -->

            <!-- Start header -->
                {% include 'partials/header.html.twig' %}
            <!-- End header -->

            <!-- Start section footer -->
                {% include 'partials/footer.html.twig' %}
            <!-- end footer -->

            <!-- Start section copyrights -->
                {% include 'partials/copyrights.html.twig' %}
            <!-- end  section copyrights -->

            <!-- Start section scroll top -->
                {% include 'partials/scroll-top.html.twig' %}
            <!-- end section scroll top -->
        {% endblock %}
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset('js/all.js')}}"></script>
            <!-- ALL PLUGINS -->
            <script src="{{ asset('js/custom.js')}}"></script>
            <script src="{{ asset('js/timeline.min.js')}}"></script>
            <script>
                timeline(document.querySelectorAll('.timeline'), {
                    forceVerticalMode: 700,
                    mode: 'horizontal',
                    verticalStartPosition: 'left',
                    visibleItems: 4
                });
            </script>
        {% endblock %}
    </body>
</html>
